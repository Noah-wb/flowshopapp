@import '../../common/common.wxss';

.banner image {
  width: 100%;
  height: 480rpx;
  margin: 0px auto;
  display: block;
  background-color: red;
}

.tui-countdown-content {
  height: 52px;
  line-height: 50px;
  text-align: center;
  background-color: #e94d3c;
  margin: 0px auto;
  padding: 0 15px;
  font-size: 18px;
}

.tui-conutdown-box {
  display: inline-block;
  height: 26px;
  width: 26px;
  line-height: 26px;
  text-align: center;
  background-color: #000;
  color: #fff;
  margin: 0 5px;
}

.tui-countdown-bg {
  background-color: #df0101;
}

.goods-box {
  position: relative;
  width: 100%;
  line-height: 100rpx;
  margin-bottom: 60rpx;
  box-sizing: border-box;
  border-radius: 50rpx;
  font-size: 28rpx;
  align-content: center;
}

.goods-title {
  font-size: 40rpx;
  text-align: center;
  /* border-bottom:  */
}

.prices_view {
  width: 100%;
  border-bottom: 2px solid #fafafa;
  border-top: 2px solid #fafafa;
}

.orgprice {
  font-size: 38rpx;
  color: #eb6b5f;
  font-weight: bold;
}

.curprice {
  font-size: 30rpx;
  color: #ccc;
  margin-left: 4%;
  text-decoration: line-through;
}

.group-title {
  height: 55rpx;
  margin-top: 5px;
}

.count-title {
  font-size: 30rpx;
  display: flex;
  line-height: 30rpx;
  color: #ea635e;
  padding-bottom: 5px;
}

.buy-number {
  color: white;
  display:block;
  background-color: red;
  border-radius: 5px;
  font-size: 27rpx;
  width: 20px;
  text-align: center;
}

.condition-title {
  font-size: 25rpx;
  display: flex;
  line-height: 25rpx;
  color: #ea635e;
}

.goods-to-cart {
  width: 210rpx;
  padding-right: 75rpx;
}

.goods-cart-img {
  position: absolute;
  right: 50rpx;
  top: 28rpx;
  width: 45rpx;
  height: 45rpx;
}

.goods-stock {
  font-size: 28rpx;
  margin-bottom: 20rpx;
}

.goods-title {
  font-size: 40rpx;
  margin-bottom: 30rpx;
}

.goods-price {
  font-size: 40rpx;
}

.goods-tab-nav {
  display: inline-block;
  width: 33.33%;
  height: 90rpx;
  line-height: 90rpx;
  border-bottom: 1rpx solid #ededed;
  box-sizing: border-box;
  text-align: center;
  color: #c7c7cb;
}

.goods-tab-nav.on {
  color: #bcaa8a;
  border-bottom: 5rpx solid #bcaa8a;
}

.goods-content {
  padding: 40rpx;
}

.number {
  width: 8px;
  height: 8px;
  float: left;
  margin: 0 auto;
  text-align: center;
  color: #00000000;
  /*给中间的input设置左右边框即可*/
  border-left: 0rpx solid #818284;
  border-right: 0rpx solid #818284;
}

.buttons {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 100rpx;
  bottom: 0;
}

.addCart_view, .buy_view {
  position: fixed;
  display: flex;
  flex-direction: column;
  bottom: 0;
  height: 100rpx;
  text-align: center;
  border-top: 1px solid #ccc;
}

.addCart, .buy {
  font-size: 16px;
  line-height: 50rpx;
  flex: 1;
  color: #fff;
}

.addCart_view {
  width: 50%;
  background-color: #f2a93b;
}

.addCart {
  color: #fff;
}

.buy_view {
  width: 50%;
  margin-left: 50%;
  background-color: #e94d3c;
}

.buy {
  color: #fff;
}

.endtime{
   position: fixed;
  display: flex;
  flex-direction: column;
  bottom: 0;
  height: 100rpx;
  text-align: center;
  border-top: 1px solid #ccc;
  background-color: #ccc;
   width: 100%;
   line-height: 100rpx;
   color: #EEEEEE;
}