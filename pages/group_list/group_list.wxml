<view class="main">
    <view class="banner">
        <image src="cloud://syh-uik0l.7379-syh-uik0l-1256796177/imges/b1.jpg"></image>
    </view>

     <view class="recommend">
            <view class="recommend_title_view">
                <text class="recommend_line">-</text>
                <image class="recommend_pic" src="/image/hot.png"></image>
                <text class="recommend_title">拼团商品   -</text>
            </view>
            <block wx:for="{{goods}}">
                <view class="recommend_content" bindtap="getProDetail" data-proid="{{item.pro_id}}"> 
                    <view class="pro_img_view">
                        <image class="pro_img" src="{{item.gImage}}" mode="widthFix"></image>
                    </view>
                    <view class="content">
                        <text class="pro_name">{{item.gName}}</text>
                        <view class="priceAndButton">
                            <view class="about_price">
                                <view class="org_price_view">
                                    <text class="org_price_title">单独购买</text><text class="org_price">￥{{item.gPrice}}</text>
                                </view>
                                <view class="cur_price_view">
                                    <text class="group_count_text">{{item.gNum}}人团 ￥</text><text class="cur_price">{{item.gPrice}}</text>
                                </view>
                            </view>
                            <view class="button_view">
                                <text class="pintuan_button">去拼团 ></text>
                            </view>
                        </view>
                    </view>
                </view>
                <view class="thin_line"></view>
            </block>
        </view>
</view>